$('.date-sort-default').hide();
$('.date-sort-descending').hide();
$('.date-sort-ascending').show();
$('.user-sort-default').show();
$('.user-sort-ascending').hide();
$('.user-sort-descending').hide();
$('.subject-sort-default').show();
$('.subject-sort-ascending').hide();
$('.subject-sort-descending').hide();
if ($('.date-sort-default').attr('data-all') != null) {
	$('#message-list').html('<%= escape_javascript("#{render :partial => 'messages', :locals => {:date_ascend => true, :all_messages => true}}").html_safe %>');
} else {
	$('#message-list').html('<%= escape_javascript("#{render :partial => 'messages', :locals => {:date_ascend => true}}").html_safe %>');
}
