																<a href="#" data-toggle="modal" data-target="#use-wear-alert-modal" class="use-wear-delete-link delete" tabindex="-1">Delete</a>
                            </div><!-- row-area -->
                        </div><!-- selects -->
<div class="number" style="display:none">_NUM_</div>
                    </div><!-- block -->
