                                </div>
                                <div class="col">
																	<%= f.label('DateReturned', 'Date Returned')%>
																	<%= f.text_area('DateReturned', {:maxlength => 50, :class => 'form-control'})%>
                                </div>
							</div>
                            <div class="row-area">
                                <div class="col">
																	<%= f.label('ArtifactHandler', 'Artifact Handler')%>
																	<%= f.text_area('ArtifactHandler', {:maxlength => 50, :class => 'form-control'})%>
                                </div>
                                <div class="col">
																	<%= f.label('Notes', 'Notes')%>
																	<%= f.text_area('Notes', { :class => 'form-control'})%>
                                </div>
							</div>
                        </div><!-- selects -->
<div class="number" style="display:none">_NUM_</div>
                    </div><!-- block -->
