                    <div class="block <%= @object_location_color == true ? 'colored' : '' %>">
                        <div class="three-columns three-with-delete">
                            <div class="row-area">
                                <div class="col">
																	<%= f.label('LoanedTo', 'Loaned To')%>
																	<%= f.text_area('LoanedTo', {:maxlength => 50, :class => 'form-control'})%>
                                </div>
                                <div class="col">
																	<%= f.label('InstitutionContact', 'Institution Contact')%>
																	<%= f.text_area('InstitutionContact', {:maxlength => 50, :class => 'form-control'})%>
                                </div>
                                <div class="col">
																	<%= f.label('ExhibitName', 'Exhibit Name')%>
																	<%= f.text_area('ExhibitName', {:maxlength => 50, :class => 'form-control'})%>
                                </div>
								<%= f.hidden_field :_destroy %>
								<a href="#" data-toggle="modal" data-target="#object-location-alert-modal" class="object-location-delete-link delete" tabindex="-1">Delete</a>
							</div>
                            <div class="row-area">
                                <div class="col">
																	<%= f.label('LoanLength', 'Loan Length')%>
