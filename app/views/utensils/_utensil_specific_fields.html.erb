                    <div class="block <%= @specific_colored == true ? 'colored' : '' %>">
                        <div class="three-columns three-with-delete">
                            <div class="row-area">
                                <div class="col">
																	<%= f.label('UtensilPartID', 'Part')%>
																	<%= f.collection_select('UtensilPartID', UtensilPart.all.order('"UtensilPart"'), :id, 'UtensilPart', {:include_blank => '--select--'}, {'data-placeholder' => '--select--', :class => 'form-control'})%>
                                </div>
                                <div class="col">
																	<%= f.label('UtensilShapeID', 'Shape')%>
																	<%= f.collection_select('UtensilShapeID', UtensilShape.all.order('"UtensilShape"'), :id, 'UtensilShape', {:include_blank => '--select--'}, {'data-placeholder' => '--select--', :class => 'form-control'})%>
                                </div>
                                <div class="col">
																	<%= f.label('UtensilManuTechID', 'Manufacturing Technique')%>
