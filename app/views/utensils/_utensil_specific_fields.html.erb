                                </div>
																<%= f.hidden_field :_destroy %>
																<a href="#" data-toggle="modal" data-target="#specific-alert-modal" class="specific-delete-link delete" tabindex="-1">Delete</a>
														</div>
                            <div class="row-area">
                                <div class="col">
																	<%= f.label('UtensilMaterialID', 'Material')%>
																	<%= f.collection_select('UtensilMaterialID', UtensilMaterial.all.order('"UtensilMaterial"'), :id, 'UtensilMaterial', {:include_blank => '--select--'}, {'data-placeholder' => '--select--', :class => 'form-control'})%>
                                </div>
                                <div class="col">
																	<%= f.label('PartLength', 'Length (mm)')%>
																	<%= f.text_field('PartLength', {:class => 'form-control'})%>
                                </div>
                                <div class="col">
																	<%= f.label('PartWidth', 'Width (mm)')%>
