															</div>
	                            <div class="row-area">
	                                <div class="col">
																		<%= f.label('PartHeight', 'Height (mm)')%>
																		<%= f.text_field('PartHeight', {:class => 'form-control'})%>
	                                </div>
																</div>
                        </div><!-- selects -->
<div class="number" style="display:none">_NUM_</div>
                    </div><!-- block -->
